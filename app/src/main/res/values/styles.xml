<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DialogCommon" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="DialogBottom" parent="@style/Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/StyleBottom</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="StyleBottom" parent="android:Animation" mce_bogus="1" >
        <item name="android:windowEnterAnimation">@anim/anim_dialog_up</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_down</item>
    </style>

    <style name="StyleCommon" parent="android:Animation" mce_bogus="1" >
        <item name="android:windowEnterAnimation">@anim/anim_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_out</item>
    </style>
</resources>

